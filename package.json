    "@next/mdx": "^15.3.1",
    "@sentry/nextjs": "^9.13.0",
    "copy-webpack-plugin": "^13.0.0",
    "core-js": "^3.41.0",
    "editorjs-html": "^4.0.5",
    "idea-react": "^2.0.0-rc.10",
    "koajax": "^3.1.2",
    "less": "^4.3.0",
    "less-loader": "^12.2.0",
    "lodash": "^4.17.21",
    "mobx": "^6.13.7",
    "mobx-github": "^0.3.5",
    "mobx-i18n": "^0.6.0",
    "mobx-react": "^9.2.0",
    "mobx-restful": "^2.1.0",
    "mobx-restful-table": "^2.1.1",
